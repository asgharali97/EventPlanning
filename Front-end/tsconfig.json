{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@shared/*": ["../shared/*"],
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@ui/*": ["ui/*"]
  },
    "types": ["vite/client"]
  },
  "include": ["src", "../shared"]
}
